<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

  >



    <TextView
        android:id="@+id/text_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center|right"
        android:text="蓝牙"
        android:textSize="36sp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/img_bluetooth"
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/text_bluetooth"
        android:src="@drawable/bluetooth_on_off"
        tools:ignore="MissingConstraints"

        />

    <Button
        android:id="@+id/bt_conncet_bluetooth"
        android:layout_width="81dp"
        android:layout_height="49dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/text_bluetooth"
        android:layout_marginLeft="100dp"
        android:text="连接蓝牙"

        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_receive"
        android:layout_width="174dp"
        android:layout_height="67dp"
        android:layout_below="@+id/text_bluetooth"
        android:layout_alignRight="@id/text_bluetooth"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-52dp"
        android:gravity="right|center"
        android:text="接收数据"
        android:textSize="36sp" />

    <Button
        android:id="@+id/bt_receive"
        android:layout_width="81dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/text_receive"
        android:layout_below="@+id/bt_conncet_bluetooth"
        android:layout_marginLeft="100dp"
        android:text="开始接收数据"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_open_bluetooth"
        android:layout_marginTop="20dp"
        android:text="mMac:90:9A:77:0C:38:2C"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        tools:ignore="UnknownId" />
    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mMac"
        android:layout_alignTop="@id/et_bluetooth_output"
        />
    <EditText
        android:id="@+id/et_bluetooth_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="8"
        android:maxLines="40"
        android:gravity="top|left"
        android:textSize="6pt"
        android:text="准备就绪"
        android:inputType="textMultiLine"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/text_receive"
        />
    <Button
        android:id="@+id/bluetooth_to_LineChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/clear"
        android:layout_alignTop="@+id/clear"
        android:text="绘制图表"/>
    <com.example.tabfragment.AppleSwitch
        android:id="@+id/appleswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluetooth_to_LineChart"
        />
    <Switch
        android:id="@+id/switch_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appleswitch"/>




</RelativeLayout>